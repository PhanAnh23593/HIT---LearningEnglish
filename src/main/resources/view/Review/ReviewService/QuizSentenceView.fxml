<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" style="-fx-padding: 40; -fx-background-color: #F3F4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.Review.ReviewController">
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button style="-fx-background-color: transparent; -fx-font-size: 20px; -fx-cursor: hand;" text="×" textFill="#6b7280" />
        <ProgressBar prefWidth="600.0" progress="0.9" style="-fx-accent: #4f46e5; -fx-control-inner-background: #E0E7FF;" HBox.hgrow="ALWAYS" />
        <Label text="9/10" textFill="#6b7280" />
    </HBox>

    <VBox alignment="CENTER" prefHeight="180.0" prefWidth="700.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 5); -fx-padding: 20;">
        <Label text="Dịch câu sau sang tiếng Việt:" textFill="#9ca3af" />
        <Label text="He usually plays soccer in the afternoon." textAlignment="CENTER" textFill="#1f2937" wrapText="true">
            <font><Font name="System Bold" size="26.0" /></font>
        </Label>
    </VBox>

    <VBox alignment="CENTER" spacing="15.0">
        <Button alignment="BASELINE_LEFT" prefHeight="55.0" prefWidth="700.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E5E7EB; -fx-border-radius: 10; -fx-padding: 0 20; -fx-font-size: 15px; -fx-cursor: hand;" text="A. Anh ấy thường chơi bóng đá vào buổi chiều." />
        <Button alignment="BASELINE_LEFT" prefHeight="55.0" prefWidth="700.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E5E7EB; -fx-border-radius: 10; -fx-padding: 0 20; -fx-font-size: 15px; -fx-cursor: hand;" text="B. Anh ấy thích chơi bóng đá mỗi ngày." />
        <Button alignment="BASELINE_LEFT" prefHeight="55.0" prefWidth="700.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E5E7EB; -fx-border-radius: 10; -fx-padding: 0 20; -fx-font-size: 15px; -fx-cursor: hand;" text="C. Anh ấy đã chơi bóng đá chiều qua." />
        <Button alignment="BASELINE_LEFT" prefHeight="55.0" prefWidth="700.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E5E7EB; -fx-border-radius: 10; -fx-padding: 0 20; -fx-font-size: 15px; -fx-cursor: hand;" text="D. Anh ấy đang chơi bóng đá." />
    </VBox>
</VBox>