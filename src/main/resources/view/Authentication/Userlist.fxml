<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.Authentication.UserListController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="DANH SÁCH TÀI KHOẢN HỆ THỐNG" textFill="#2c3e50">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <TableView fx:id="tableUsers" layoutX="30.0" layoutY="80.0" prefHeight="450.0" prefWidth="740.0" stylesheets="@../../css/dashboard.css">
            <columns>
                <TableColumn fx:id="colId" prefWidth="70.0" text="ID" />
                <TableColumn fx:id="colUsername" prefWidth="200.0" text="Tên đăng nhập" />
                <TableColumn fx:id="colEmail" prefWidth="300.0" text="Email" />
                <TableColumn fx:id="colRole" prefWidth="150.0" text="Quyền (Role)" />
            </columns>
        </TableView>

        <Button layoutX="30.0" layoutY="545.0" mnemonicParsing="false" onAction="#onBackToDashboard" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;" text="⬅ Quay lại Dashboard">
            <font><Font name="System Bold" size="13.0" /></font>
        </Button>
    </children>
</AnchorPane>